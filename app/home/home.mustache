      <div class="container col-xxl-10 py-5 px-4">
        <h2 class="display-5 fw-bold text-body-emphasis lh-1 mb-5">
          Submit Your Application
        </h2>
        <form
          id="application-form"
          class="col-lg-8 offset-lg-2"
          action="https://formbold.com/s/9BAPd"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="mb-3 col-sm-6">
            <label for="inputName" class="form-label">Full Name</label>
            <input
              type="text"
              class="form-control"
              id="inputName"
              name="Name"
              placeholder="Jane Doe"
              required
            />
          </div>
          <div class="mb-3 col-sm-6">
            <label for="inputEmail" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              id="inputEmail"
              name="Email"
              aria-describedby="emailHelp"
            />
            <div id="emailHelp" class="form-text">
              We'll never share your email with anyone else.
            </div>
          </div>
          <div class="mb-3 col-sm-6">
            <label for="inputPhone" class="form-label">Phone</label>
            <input
              type="tel"
              class="form-control"
              id="inputPhone"
              name="Phone"
              placeholder="+1 234 567 8901"
              required
            />
          </div>
          <div class="mb-3 col-sm-6">
            <label for="inputDoB" class="form-label">Date Of Birth</label>
            <input
              type="date"
              class="form-control"
              id="inputDoB"
              name="Date of Birth"
              required
            />
          </div>
          <div class="mb-3 col-sm-6">
            <label for="inputPosition" class="form-label"
              >Position Applying</label
            >
            <select
              id="inputPosition"
              class="form-select"
              name="Position Applied"
              required
            >
              <option value="">Select Position</option>
              <option value="frontend">Frontend Developer</option>
              <option value="fullstack">Full Stack Developer</option>
              <option value="data scientist">Data Scientist</option>
              <option value="ml engineer">Machine Learning Enginerr</option>
            </select>
          </div>
          <div class="mb-3 col-sm-6">
            <label for="formFileMultiple" class="form-label"
              >Upload Resume and/or Cover Letter</label
            >
            <input
              class="form-control"
              type="file"
              id="formFileMultiple"
              name="File"
            />
          </div>
          <div class="mb-3">
            <label for="inputCoverletter">Cover Letter</label><br />
            <textarea
              id="inputCoverletter"
              class="form-control"
              name="Coverletter"
              rows="5"
              placeholder="Explain what makes you suitable for the job.."
            ></textarea>
          </div>
          <div class="mb-3 col-sm-6 form-check">
            <input
              type="checkbox"
              class="form-check-input"
              id="inputTerms"
              name="terms"
              required
            />
            <label for="inputTerms" class="form-check-label">
              I agree to the terms and conditions
            </label>
          </div>
          <div class="mb-3 col-sm-6">
            <button class="btn btn-primary" type="submit">Submit form</button>
          </div>
        </form>
      </div>
    </main>

